<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_det_rep_background" >

    <LinearLayout
        android:id="@+id/ll_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp" >

        <TextView
            android:id="@+id/popup_det_title_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:minLines="2"
            android:textColor="@android:color/white"
            android:text="Detalles de reporte"
            android:textSize="18sp"
            android:background="@drawable/popup_det_tv_background" />

        <TextView
            android:id="@+id/popup_det_address_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:minLines="2"
            android:textColor="@android:color/white"
            android:background="@drawable/popup_det_tv_background" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/popup_like_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:background="@drawable/popup_det_like_background"
        android:layout_margin="10dp"
        android:src="@drawable/popup_det_like"
        app:layout_constraintTop_toBottomOf="@id/ll_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>